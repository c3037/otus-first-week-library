{
    "name": "c3037/otus-first-week-library",
    "authors": [
        {
            "name": "Dmitry P.",
            "email": "dmitry.porozhnyakov@mail.ru"
        }
    ],
    "require": {
        "php": "^7.1.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "c3037\\Otus\\FirstWeek\\Library\\": ["src/Library/", "tests/Library/"]
        }
    },
    "scripts": {
        "copy-phpunit-config": [
            "[ -f tests/phpunit.xml ] || cp tests/phpunit.xml.dist tests/phpunit.xml"
        ],
        "post-install-cmd": [
            "@copy-phpunit-config"
        ],
        "post-update-cmd": [
            "@copy-phpunit-config"
        ]
    },
    "license": "MIT"
}
